{
	"name": "what-to-cook",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/lalugeo/what-to-cook"
	},
	"author": "Lalu George",
	"scripts": {
		"start": "npm run build && npm run serve",
		"build": "npm run build-be && npm run build-fe",
		"build-fe": "cd src/client && ng build",
		"build-be": "npm run build-ts && npm run lint",
		"serve": "node dist/server.js",
		"test": "jest --forceExit --coverage --verbose",
		"build-ts": "tsc",
		"watch-ts": "tsc -w",
		"lint": "eslint \"src/**/*.ts\" --quiet"
	},
	"devDependencies": {
		"@types/body-parser": "^1.17.1",
		"@types/eslint": "^6.1.3",
		"@types/express": "^4.17.2",
		"@types/node": "^12.12.21",
		"@typescript-eslint/eslint-plugin": "^2.12.0",
		"@typescript-eslint/parser": "^2.12.0",
		"eslint": "^6.8.0",
		"jest": "^24.9.0",
		"ts-jest": "^24.2.0",
		"typescript": "^3.7.4"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"express": "^4.17.1",
		"winston": "^3.2.1"
	}
}
